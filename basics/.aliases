#!/bin/bash
#
# This script includes the most common aliases

################
# Setting for easier shell usage
################
# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# fast cd into Workspace folder
alias cdws="cd ~/Workspace/"

# search within installed debian packages
alias lspack="dpkg -l | grep ^ii | awk '{print \$2}' | grep"

################
# Setting for Python and Pip
################
###### setup gpip for global 'pip' command
alias gpip="PIP_REQUIRE_VIRTUALENV=\"\" pip"
alias gpip3="PIP_REQUIRE_VIRTUALENV=\"\" pip3"